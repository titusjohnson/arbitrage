<%# Render event toasts for unseen events %>
<% content_for :event_toasts do %>
  <% @game.game_events.active.includes(:event).each do |game_event| %>
    <% if !game_event.seen? %>
      <%= render partial: "shared/event_toast",
                 locals: {
                   event: game_event.event,
                   is_unseen: true,
                   days_remaining: game_event.days_remaining
                 } %>
      <% game_event.update(seen: true) %>
    <% end %>
  <% end %>
<% end %>

<div class="Page">
  <div class="Page__Header">
    <h1 class="Page__Title"><%= @location.name %> Marketplace</h1>
    <% if @location.description.present? %>
      <p class="Page__Subtitle"><%= @location.description %></p>
    <% end %>
  </div>

  <div class="Page__Content">
    <% if @holdings_with_affinity.any? %>
      <h2>Your Holdings</h2>
      <p class="Text--muted" style="margin-bottom: 12px;">Inventory items that <%= @location.name %> deals in</p>
      <div class="resource-list">
        <% @holdings_with_affinity.each do |game_resource| %>
          <%= render partial: "marketplace/resource_card",
                     locals: {
                       game_resource: game_resource,
                       game: @game,
                       location: @location,
                       inventory_by_resource: @inventory_by_resource
                     } %>
        <% end %>
      </div>
    <% end %>

    <% if @local_game_resources.any? %>
      <h2>Local Specialties</h2>
      <p class="Text--muted" style="margin-bottom: 12px;">Resources with special affinity to <%= @location.name %></p>
      <div class="resource-list">
        <% @local_game_resources.each do |game_resource| %>
          <%= render partial: "marketplace/resource_card",
                     locals: {
                       game_resource: game_resource,
                       game: @game,
                       location: @location,
                       inventory_by_resource: @inventory_by_resource
                     } %>
        <% end %>
      </div>
    <% end %>

    <% if @global_game_resources.any? %>
      <h2>Global Market</h2>
      <p class="Text--muted" style="margin-bottom: 12px;">All available resources</p>
      <div class="resource-list">
        <% @global_game_resources.each do |game_resource| %>
          <%= render partial: "marketplace/resource_card",
                     locals: {
                       game_resource: game_resource,
                       game: @game,
                       location: @location,
                       inventory_by_resource: @inventory_by_resource
                     } %>
        <% end %>
      </div>
    <% end %>

    <% if @local_game_resources.empty? && @global_game_resources.empty? %>
      <div class="Alert Alert--info">
        <p>No resources available. Something went wrong with game initialization!</p>
      </div>
    <% end %>
  </div>
</div>
