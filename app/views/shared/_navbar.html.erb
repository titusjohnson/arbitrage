<nav class="navbar">
  <%= link_to marketplace_path, class: "navbar__item" do %>
    <svg class="navbar__icon" width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <!-- Market stall / veggie stand icon -->
      <!-- Awning -->
      <path d="M2 8 L12 4 L22 8 L22 10 L2 10 Z" fill="currentColor" opacity="0.8"/>
      <path d="M2 8 Q7 10 12 8 Q17 6 22 8" fill="none" stroke="currentColor" stroke-width="1.5"/>
      <!-- Stand structure -->
      <line x1="4" y1="10" x2="4" y2="20" stroke="currentColor" stroke-width="2"/>
      <line x1="20" y1="10" x2="20" y2="20" stroke="currentColor" stroke-width="2"/>
      <!-- Counter -->
      <rect x="4" y="13" width="16" height="2" fill="currentColor"/>
      <!-- Produce/goods -->
      <circle cx="8" cy="16" r="1.5" fill="currentColor" opacity="0.6"/>
      <circle cx="12" cy="16" r="1.5" fill="currentColor" opacity="0.6"/>
      <circle cx="16" cy="16" r="1.5" fill="currentColor" opacity="0.6"/>
    </svg>
    <span class="navbar__label">Market</span>
  <% end %>

  <%= link_to inventory_path, class: "navbar__item" do %>
    <svg class="navbar__icon" width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <!-- Briefcase icon -->
      <rect x="4" y="8" width="16" height="12" rx="1" fill="none" stroke="currentColor" stroke-width="2"/>
      <path d="M8 8 V6 C8 4.9 8.9 4 10 4 L14 4 C15.1 4 16 4.9 16 6 V8" fill="none" stroke="currentColor" stroke-width="2"/>
      <rect x="10" y="12" width="4" height="2" rx="1" fill="currentColor"/>
    </svg>
    <span class="navbar__label">Inventory</span>
  <% end %>

  <%= link_to travel_path, class: "navbar__item" do %>
    <svg class="navbar__icon" width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <!-- Simple bus icon -->
      <rect x="4" y="6" width="16" height="12" fill="none" stroke="currentColor" stroke-width="2"/>
      <rect x="6" y="8" width="5" height="4" fill="currentColor"/>
      <rect x="13" y="8" width="5" height="4" fill="currentColor"/>
      <circle cx="8" cy="20" r="1.5" fill="currentColor"/>
      <circle cx="16" cy="20" r="1.5" fill="currentColor"/>
      <line x1="4" y1="18" x2="4" y2="20" stroke="currentColor" stroke-width="2"/>
      <line x1="20" y1="18" x2="20" y2="20" stroke="currentColor" stroke-width="2"/>
    </svg>
    <span class="navbar__label">Travel</span>
  <% end %>

  <%= link_to log_path, class: "navbar__item" do %>
    <svg class="navbar__icon" width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <!-- Scroll icon -->
      <path d="M 4 4 Q 4 2 6 2 L 18 2 Q 20 2 20 4 L 20 18 Q 20 20 18 20 L 8 20 Q 6 20 6 18 L 6 6 Q 6 4 4 4"
            fill="none" stroke="currentColor" stroke-width="2"/>
      <line x1="9" y1="7" x2="17" y2="7" stroke="currentColor" stroke-width="1.5"/>
      <line x1="9" y1="11" x2="17" y2="11" stroke="currentColor" stroke-width="1.5"/>
      <line x1="9" y1="15" x2="14" y2="15" stroke="currentColor" stroke-width="1.5"/>
    </svg>
    <span class="navbar__label">Log</span>
  <% end %>
</nav>
